<p id="notice"><%= notice %></p>

<h1>Trades</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Price</th>
      <th>Filename</th>
      <th>File</th>
      <th>Close price</th>
      <th>Closed at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trades.each do |trade| %>
      <tr>
        <td><%= trade.type %></td>
        <td><%= trade.price %></td>
        <td><%= trade.filename %></td>
        <td><%= trade.file %></td>
        <td><%= trade.close_price %></td>
        <td><%= trade.closed_at %></td>
        <td><%= link_to 'Show', trade %></td>
        <td><%= link_to 'Edit', edit_trade_path(trade) %></td>
        <td><%= link_to 'Destroy', trade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

